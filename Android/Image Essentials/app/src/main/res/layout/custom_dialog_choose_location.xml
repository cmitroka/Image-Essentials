<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_fieldset_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Loaction and File Name" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNameTheFile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="left"
                android:text="Name the file:"/>

            <EditText
                android:id="@+id/editTextNameOfFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroupChooseLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbPictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pictures"/>
        <RadioButton
            android:id="@+id/rbDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"/>
        <RadioButton
            android:id="@+id/rbDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads"/>
        <RadioButton
            android:id="@+id/rbDCIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DCIM (Camera)"/>

    </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_fieldset_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewCompression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Compression:"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupCompression"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rbLossless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lossless (.png file)"/>
                    <RadioButton
                        android:id="@+id/rbCompressed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compressed (.jpg file)"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

    </LinearLayout>
</LinearLayout>
